<%= render 'header' %>

<main>
      <section class="bg-light text-center py-5">
        <div class="container">
          <div class = "">
            <p id="notice"><%= notice %></p>
          </div>
          <div class="mb-5 row">
            <!--colを12分割で分ける-->
            <div class="col-sm-4">
                <h3>input zone</h3>
                <%= form_tag("posts/create")do %>
                   <input type="input" class="px-2 mb-2 w-100" name="createSubject" value="SubjectSubject">
                   <textarea class="px-2 w-100" name="createContents">inputinputinputinputinputinput
                   </textarea>
                  <div class= "text-right">
                   <input type="submit" class="btn btn-primary btn-sm w-60" value="post">
                  </div>
                <% end %>
            </div>
            <div class="col-sm-8">
              <h3>output zone</h3>
              <% @posts.each do |posts| %>
              <div class="row">
                  <div class = "col-sm-8 text-left">
                    <h5><%= posts.subject %></h5>
                  </div>
                  <div class = "col-sm-3 text-right">
                    <% if posts.updated_at.nil? %>
                      <%= posts.created_at.strftime("%Y年%m月%d日")%>
                    <% else %>
                      <%= posts.updated_at.strftime("%Y年%m月%d日") %>
                    <% end %>
                  </div>
              </div>
                <div class = "shadow-sm p-1 mb-2 text-justify bg-white rounded">
                  <div class = "row-md-3">
                  </div>
                  <div class = "row-md-8">
                    <p class = "contents-size">
                      <%= posts.contents %>
                    </p>
                  </div>
                  <div class = "row-md-1 text-right">
                    <% if posts.updated_at.nil? %>
                      <%= posts.created_at.strftime("%H:%M")%>
                    <% else %>
                      <%= posts.updated_at.strftime("%H:%M")%>
                    <% end %>
                    <%= link_to 'Edit', edit_post_path(posts) %>
                    <%= link_to 'Destroy', posts, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                </div>

              <% end %>
              <!--
              -->
            </div>
    </div>
  </section>
</main>

<%= render 'footer' %>

