<%= render 'posts/header' %>

<main>
    <section class="text-center py-5">
         <div class="bg-orange">
            <% @user.errors.full_messages.each do |message| %>
                <div class="text-danger">
                    <%= message %>
                </div>
            <% end %>
        </div>
        <h4 class="">ユーザー登録</h4>  
        <div class ="text-center mb-2 rounded shadow-sm bg-light">
            <%= form_tag("/user/#{@user.id}/userUpdate") do %>
                <p class ="">名前</p>
                <input class="" name = "name" value="<%= @user.name %>">
                <p class ="">Eメール</p>
                <input class="" name = "email" value="<%= @user.email %>">
                <div class= "ml-auto p-2">
                    <input type="submit" class="btn btn-primary btn-sm w-60" value="確定">
                </div>

            <% end %>
        </div>
    </section>
</main>

<%= render 'posts/footer' %>