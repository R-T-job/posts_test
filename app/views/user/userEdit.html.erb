<main>
    <section>
        <% @user.errors.full_messages.each do |message| %>
        <div class="text-center alert-danger">
            <%= message %>
        </div>
        <% end %>
    </section>
    <section class="text-center">
        <div class="mb-2 rounded shadow-sm bg-light">
            <h4 class="py-1">ユーザー情報編集</h4>
            <%= form_tag("/user/#{@user.id}/userUpdate", {multipart: true}) do %>
            <p class="">画像</p>
            <input class="" name="image" type="file">
            <p class="">ユーザー名</p>
            <% if @user.name != "管理人"%>
            <input class="" name="name" value="<%= @user.name %>">
            <% else %>
            <p class="h5 text-success">
                <%= @user.name %>
            </p>
            <% end %>
            <p class="">Eメール</p>
            <input class="" name="email" value="<%= @user.email %>">
            <p class="">パスワード</p>
            <input type="password" class="" name="password">
            <div class="ml-auto p-2">
                <input type="submit" class="btn btn-primary btn-sm w-60" value="確定">
            </div>
            <% end %>
        </div>
        <% if @user.name != "管理人"%>
        <%= form_tag("/user/#{@user.id}/userDestroy") do %>
        <input type="submit" class="btn btn-danger btn-sm w-60" value="delete">
        <% end %>
        <% end %>
    </section>
</main>